<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- 配置mysql 驱动jar包路径.用了绝对路径 -->
    <classPathEntry location="/home/fan/IdeaProjects/wukong-framework/wukong-generator/src/main/resources/mysql-connector-java-5.1.45-bin.jar" />
    <!--<classPathEntry location="mysql-connector-java-5.1.45-bin.jar" />-->


    <!--MyBatis3DynamicSql  MyBatis3=可以生成xml-->
    <context id="wukong-generator" targetRuntime="MyBatis3DynamicSql">

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="com.wukong.generator.plugins.WukongPlugin"/>

        <!-- 为了防止生成的代码中有很多注释，比较难看，加入下面的配置控制 -->
        <commentGenerator>
            <!--<property name="suppressAllComments" value="true" />-->
            <!--<property name="suppressDate" value="true" />-->
        </commentGenerator>
        <!-- 注释控制完毕 -->

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/wukong_read?useSSL=false"
                        userId="root"
                        password="rootmysql">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 数据表对应的model 层  -->
        <javaModelGenerator targetPackage="com.wukong.examples.entity" targetProject="log">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- sql mapper 隐射配置文件 如果是 MyBatis3DynamicSql 就不生成xml文件 -->
        <sqlMapGenerator targetPackage="com.wukong.examples.mapper"  targetProject="log">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 在ibatis2 中是dao层，但在mybatis3中，其实就是mapper接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.wukong.examples.dao"  targetProject="log">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 要对那些数据表进行生成操作，必须要有一个. -->
        <!--<table tableName="user" domainObjectName="user">-->
        <!--</table>-->

        <table tableName="wk_order" domainObjectName="order">
        </table>

    </context>
</generatorConfiguration>